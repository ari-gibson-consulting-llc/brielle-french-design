---
// https://www.hyperui.dev/components/marketing/buttons#component-6
const { class: className } = Astro.props;
---

<a
  class:list={[
    "font-base group relative inline-flex items-center overflow-hidden rounded bg-#2FA496 px-8 py-3 text-white focus:outline-none focus:ring active:bg-#34baaa",
    className,
  ]}
  href="/contact"
>
  <span class="absolute -end-full transition-all group-hover:end-4">
    <svg
      class="size-5"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
    </svg>
  </span>

  <span class="text-sm font-medium transition-all group-hover:me-4">
    <slot />
  </span>
</a>
