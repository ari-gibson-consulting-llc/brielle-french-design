---
interface Props {
  title: string;
  slug?: string;
  description: string;
}

const {
  title,
  slug,
  description,
} = Astro.props;
---

<div id={slug} data-service-section class="font-base scroll-m-16">
  <h2 class="pb-4 text-xl sm:text-2xl">{title}</h2>
  <p set:html={description} />
</div>
