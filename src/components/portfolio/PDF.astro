---
import type { PortfolioEntryPDF } from "../../lib/getContent";
type Props = Pick<PortfolioEntryPDF["props"], "pdf">;
const { pdf } = Astro.props;
---

<div class="flex flex-col h-full w-full pb-4 flex-gap-4">
  <iframe
    class="flex-grow"
    src={pdf.fields.file!.url}
    width="100%"
    height="100%"></iframe>
  <a
    class="rounded border-4 border-blue-600 bg-blue-600 px-4 py-2 text-center text-white hover:bg-blue-700"
    href={"https:" + pdf.fields.file!.url}
    target="_blank"
    rel="noopener noreferrer">View Full PDF in New Tab</a
  >
</div>
